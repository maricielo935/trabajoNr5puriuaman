#Verificador 1:
nota1=10
nota2=19
nota3=7
nota4=13
promedio=(nota1+nota2+nota3+nota4)/4
print(promedio)

alumno_aprobado=(promedio>=11)
print("El alumno aprobo el curso ", alumno_aprobado)

#Verificador 2:
angulo1=90
angulo2=30
angulo3=70
suma_de_los_tres_angulos=190
print(suma_de_los_tres_angulos)

suma_de_angulos_internos_de_un_triangulo=(suma_de_los_tres_angulos==180)
print("La suma de angulos es igual a la suma de angulos internos de un triangulo ", suma_de_angulos_internos_de_un_triangulo)

#Verificador 3:
largo=80
ancho=50
